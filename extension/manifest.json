{
  "manifest_version": 3,
  "name": "X Profile Scraper (No API)",
  "description": "Scroll a profile on X (Twitter) to collect tweets and metadata, then export to CSV.",
  "version": "0.1.0",
  "action": {
    "default_title": "Scrape X Profile",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

